@model Modelos.PaisModelo

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>PaisModelo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NombrePais)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombrePais)
        </dd>


    </dl>


    <p>Departamentos del país</p>
    <table class="table">
        @foreach (var item in Model.Departamentos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreDepartamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaisId)
                </td>

            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
